@model IEnumerable<MasterChef.Web.Models.RecipetModel>
<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Receitas</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="RecipeCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Criar Nova Receita
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Receita
                </th>
                <th>
                    Descrição
                </th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                     <td>
                        @item.Description
                    </td>                   
                    <td>
                        <a asp-action="RecipeUpdate" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="RecipeDelete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>